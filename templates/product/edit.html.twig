{% extends 'base.html.twig' %}

{% block title %} Edit Product {% endblock %}

{% block body %}
  <div class="container">
    <h1>Edit Product</h1>
    <form action="{{ path('product-edit', {slug: editUserData.slug}) }}" method="post">
{#      <input type="hidden" name="_method" value="PUT">#}
      <div class="form-group mb-4">
        <label class="mb-2" for="productName">Product Name</label>
        <input type="text" class="form-control" id="productName" name="editProductName" placeholder="Enter Product Name" value="{{ editUserData.name }}" >
      </div>
      <div class="form-group mb-4">
        <label class="mb-2" for="productDescription">Product Description</label>
        <textarea class="form-control" id="productDescription" name="editProductDescription" placeholder="Enter product description">{{ editUserData.description }}</textarea>
      </div>
      <div class="form-group mb-4">
        <label class="mb-2" for="productPrice">Product Price</label>
        <input type="text" class="form-control" id="productPrice" name="editProductPrice" placeholder="Enter Product Price" value="{{ editUserData.price }}">
      </div>
      <button type="submit" class="btn btn-primary" name="editProductSubmit">Edit</button>
    </form>
  </div>

{% endblock %}